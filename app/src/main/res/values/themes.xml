<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SodosiAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorSecondaryVariant">@color/secondary_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/sub_black</item>

        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">#0F0F10</item>

        <item name="android:editTextBackground">@null</item>
        <item name="android:textCursorDrawable">@drawable/cursor_blue</item>
    </style>

    <style name="CommunityTabTextAppearance">

    </style>

    <style name="CommunityTabStyle">
        <!--        <item name="tabTextAppearance">@style/CommunityTabTextAppearance</item>-->
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabPaddingBottom">0dp</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">4dp</item>
        <item name="tabPaddingTop">0dp</item>
        <item name="tabSelectedTextColor">#000000</item>
        <item name="tabTextColor">#AAAAAA</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- Bottom Sheet Dialog Fragment Corner Rounded -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rounded_white_bottomsheet</item>
    </style>

    <!-- Text Style-->
    <style name="Typography">
        <item name="android:textColor">#0F0F10</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="Typography.BigTitles" />

    <style name="Typography.BigTitles.Huge">
        <item name="android:lineSpacingExtra">17dp</item>
        <item name="android:textSize">56dp</item>
    </style>

    <style name="Typography.BigTitles.Huge.Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="Typography.BigTitles.Large">
        <item name="android:textSize">34dp</item>
    </style>

    <style name="Typography.BigTitles.Large.Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="Typography.Titles" />

    <style name="Typography.Titles.Title1">
        <item name="android:textSize">28dp</item>
    </style>

    <style name="Typography.Titles.Title1.Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="Typography.Titles.Title2">
        <item name="android:textSize">22dp</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="Typography.Titles.Title2.Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="Typography.Titles.Title3">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Typography.Titles.Title3.Bold">
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="Typography.HeadLines">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Typography.HeadLines.Callout">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="Typography.HeadLines.Callout.Bold">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="Typography.HeadLines.SubHeadLine">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Typography.HeadLines.SubHeadLine.Bold">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="Typography.Body">
        <item name="android:textSize">15dp</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="Typography.Body.Bold">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="Typography.Caption">
        <item name="android:textSize">13dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Typography.Caption.Bold">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>
</resources>