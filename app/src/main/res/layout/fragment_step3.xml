<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sodosi.ui.common.customview.SodosiAppbar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSmsCode"
        style="@style/Typography.Titles.Title2.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/onboarding_input_sms_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar" />

    <View
        android:id="@+id/smsCodeBackground"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_rounded_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSmsCode" />

    <EditText
        android:id="@+id/etSmsCode"
        style="@style/Typography.HeadLines.Callout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/onboarding_sms_code_hint"
        android:inputType="number"
        android:maxLength="6"
        android:textColorHint="@color/gray3"
        app:layout_constraintBottom_toBottomOf="@id/smsCodeBackground"
        app:layout_constraintEnd_toEndOf="@id/smsCodeBackground"
        app:layout_constraintStart_toStartOf="@id/smsCodeBackground"
        app:layout_constraintTop_toTopOf="@id/smsCodeBackground" />

    <TextView
        android:id="@+id/tvExpiration"
        style="@style/Typography.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/onboarding_sms_expiration"
        android:textColor="@color/gray1"
        app:layout_constraintStart_toStartOf="@id/smsCodeBackground"
        app:layout_constraintTop_toBottomOf="@id/smsCodeBackground" />

    <TextView
        android:id="@+id/tvTimer"
        style="@style/Typography.HeadLines.SubHeadLine.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/gray2"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintEnd_toStartOf="@id/tvResend"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="00:00" />

    <TextView
        android:id="@+id/tvResend"
        style="@style/Typography.Body.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/onboarding_sms_code_resend"
        android:textColor="@color/gray1"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTimer" />

    <com.sodosi.ui.common.customview.SodosiButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="20dp"
        android:text="@string/onboarding_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>