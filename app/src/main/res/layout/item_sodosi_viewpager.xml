<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kotlin.jvm.functions.Function1" />

        <import type="kotlin.Unit" />

        <import type="com.sodosi.domain.entity.Sodosi" />

        <variable
            name="item"
            type="Sodosi" />

        <variable
            name="onItemClick"
            type="Function1&lt;Sodosi, Unit>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvSodosiName"
            style="@style/Typography.Titles.Title2.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="28dp"
            android:text="@{item.name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="똥손인 나도\n여기서 찍으면 인생샷!" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/green"
            app:layout_constraintStart_toStartOf="@id/tvSodosiName"
            app:layout_constraintTop_toBottomOf="@id/tvSodosiName" />

        <TextView
            android:id="@+id/ivOwnerName"
            style="@style/Typography.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@{item.userName}"
            app:layout_constraintBottom_toBottomOf="@id/ivProfile"
            app:layout_constraintStart_toEndOf="@id/ivProfile"
            app:layout_constraintTop_toTopOf="@id/ivProfile"
            tools:text="시장 관악산악회" />

        <TextView
            android:id="@+id/tvUserCount"
            style="@style/Typography.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="34명의 소시민들"
            android:textColor="@color/gray2"
            app:layout_constraintStart_toStartOf="@id/ivProfile"
            app:layout_constraintTop_toBottomOf="@id/ivProfile"
            tools:text="34명의 소시민들" />

        <View
            android:id="@+id/countDivider"
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_marginStart="6dp"
            android:background="@color/gray2"
            app:layout_constraintBottom_toBottomOf="@id/tvUserCount"
            app:layout_constraintStart_toEndOf="@id/tvUserCount"
            app:layout_constraintTop_toTopOf="@id/tvUserCount" />

        <TextView
            android:id="@+id/tvMomentCount"
            style="@style/Typography.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="50개의 순간"
            android:textColor="@color/gray2"
            app:layout_constraintBottom_toBottomOf="@id/countDivider"
            app:layout_constraintStart_toEndOf="@id/countDivider"
            app:layout_constraintTop_toTopOf="@id/countDivider"
            tools:text="50개의 순간" />

        <TextView
            android:id="@+id/tvIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:text="1/5"
            android:textColor="#8A8A8E"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="@id/ivSodosi"
            app:layout_constraintStart_toStartOf="@id/ivProfile"
            tools:text="1/5" />

        <View
            android:id="@+id/indicatorBackground"
            style="@style/Typography.Caption"
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:background="@drawable/background_rounded_gray_stroke"
            app:layout_constraintBottom_toBottomOf="@id/tvIndicator"
            app:layout_constraintEnd_toEndOf="@id/tvIndicator"
            app:layout_constraintStart_toStartOf="@id/tvIndicator"
            app:layout_constraintTop_toTopOf="@id/tvIndicator" />

        <ImageView
            android:id="@+id/ivSodosi"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:onClick="@{()->onItemClick.invoke(item)}"
            android:src="@drawable/sodosi_viewpager_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>